[user]
    name = {{ ansible_env.DEV_FULLNAME }}
    email = {{ ansible_env.DEV_EMAIL }}

[push]
    default = current

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    excludesfile = $HOME/.gitignore
    pager = less -FRSX
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    editor = nano
    autocrlf = input

[alias]
    ci = commit
    co = checkout
    st = status
    br = branch
    pr = pull --rebase
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s'
    fa = fetch --all --prune

[http]
    sslVerify = false
